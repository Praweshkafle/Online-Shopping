@page "/"
@inherits ProductBase

@if (Products == null)
{
    <h3>Loading Products...</h3>
}
else
{
    <h3 class="mb-5">Products</h3>
    var productCount = Products.Count();
    @if (productCount > 0)
    {
        @foreach (var groupItem in GetGroupedProductByCategory())
        {
            <h4>@GetCategoryName(groupItem)</h4>
            <div class="row mt-3">
                <DisplayProduct Products="groupItem"></DisplayProduct>
            </div>
            <hr class="mb-3" />
        }
    }
}